# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/healthcare_care_gap
DATABASE_ECHO=false

# Application Configuration  
APP_NAME=Healthcare Care Gap Automation
APP_VERSION=1.0.0
DEBUG=true
LOG_LEVEL=INFO

# Security
SECRET_KEY=your-secret-key-here-change-in-production-must-be-32-chars-or-longer
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,http://127.0.0.1:3000,http://127.0.0.1:8000

# AutoGen Configuration
OPENAI_API_KEY=your-openai-api-key-here
# OR for Anthropic Claude:
ANTHROPIC_API_KEY=your-anthropic-api-key-here
AUTOGEN_CONFIG_PATH=./autogen_config.json

# Email Configuration (for notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@healthcare-caregap.com

# External APIs (for future integrations)
# FHIR_SERVER_URL=https://your-fhir-server.com
# EHR_API_KEY=your-ehr-api-key
